<div class="container">
  <%= render @post %>
  <div>
    <%= link_to "Edit", edit_post_path(@post) %> |
    <%= link_to "Back", posts_path %>

    <%= button_to "Destroy", @post, method: :delete %>
  </div>
</div>

<div class="container">
  <%= render 'comments/form',
    post: @post,
    comment: @post.comments.build,
    submit_label: "Reply" %>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment',
    post: @post,
    comment: comment %>
  <% end %>
</div>
